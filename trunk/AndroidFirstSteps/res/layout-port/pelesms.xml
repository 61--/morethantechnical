<Button
android:id="@+id/btnSend"
android:layout_width="245px"
android:layout_height="wrap_content"
android:text="Send"
android:layout_x="31px" android:layout_y="250px">
</Button>

<TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_x="21dip" android:id="@+id/txtmsg" android:text="Message" android:layout_y="85dip"></TextView>
